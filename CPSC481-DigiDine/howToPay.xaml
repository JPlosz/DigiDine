<Window x:Class="CPSC481_DigiDine.howToPay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_DigiDine"
        mc:Ignorable="d"
        Title="howToPay" Height="250" Width="500">
    <Grid Background="{StaticResource backgroundColor}" >
        <TextBlock HorizontalAlignment="Center" Height="108" TextWrapping="Wrap" Text="Please visit the front counter to make payment." VerticalAlignment="Center" Width="450" FontSize="36" FontWeight="Bold" Foreground="{StaticResource textColor}" />

    </Grid>
</Window>
